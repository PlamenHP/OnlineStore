@using OnlineStore.Web.Controllers;

@model OnlineStore.Web.ViewModels.Category.ListCategoryProductsViewModel
@{
	ViewBag.Title = "Products";
}

<div class="container">
	<h2>@Model.Name</h2>
	<div class="row">
		@foreach (var product in Model.Products)
		{
			<div class="col-md-4">
				<a href='@Url.Action(nameof(CategoryProductsController.Details), nameof(CategoryProductsController).Replace("Controller", ""),new { @id = product.Id })' class="col-md-11 navbar btn well btn-xs btn-lg  text-primary">
					<div class="bg-danger col-md-12">
						<h4>@product.Name</h4>
					</div>
					<hr />
					<img src="@product.ImageToView">
					<hr />
					<footer><strong>Price: $@product.Price</strong></footer>
				</a>
			</div>
		}
	</div>
</div>
